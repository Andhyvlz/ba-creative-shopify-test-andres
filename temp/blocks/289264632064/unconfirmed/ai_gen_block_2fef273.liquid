{% doc %}
  @prompt
    section with two columns, in one a picture and in  the other a button
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-two-column-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-two-column-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
  }

  .ai-two-column-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-two-column-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-two-column-button-wrapper-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.button_alignment }};
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .ai-two-column-button-{{ ai_gen_id }} {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-two-column-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-two-column-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.column_gap | times: 0.75 }}px;
    }

    {% if block.settings.mobile_layout == 'button_first' %}
      .ai-two-column-button-wrapper-{{ ai_gen_id }} {
        order: -1;
      }
    {% endif %}
  }
{% endstyle %}

<two-column-section-{{ ai_gen_id }} class="ai-two-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-two-column-container-{{ ai_gen_id }}">
    <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1200 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-two-column-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-two-column-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-two-column-empty-state-{{ ai_gen_id }}">
            Add an image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-two-column-button-wrapper-{{ ai_gen_id }}">
      <a
        href="{{ block.settings.button_link }}"
        class="ai-two-column-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    </div>
  </div>
</two-column-section-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Two column section",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_alignment",
      "label": "Button alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "button_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "range",
      "id": "button_padding_vertical",
      "min": 8,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Vertical padding",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_padding_horizontal",
      "min": 16,
      "max": 64,
      "step": 4,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 28
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Background color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Hover background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "column_gap",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Column gap",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding",
      "default": 40
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        {
          "value": "image_first",
          "label": "Image first"
        },
        {
          "value": "button_first",
          "label": "Button first"
        }
      ],
      "default": "image_first"
    }
  ],
  "presets": [
    {
      "name": "Two column section"
    }
  ]
}
{% endschema %}
